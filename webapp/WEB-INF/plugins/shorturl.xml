<?xml version="1.0" encoding="UTF-8"?><plug-in>
    <name>shorturl</name>
    <class>fr.paris.lutece.portal.service.plugin.PluginDefaultImplementation</class>
    <version>1.0.4-SNAPSHOT</version>
    <documentation/>
    <installation/>
    <changes/>
    <user-guide/>
    <description>shorturl.plugin.description</description>
    <provider>shorturl.plugin.provider</provider>
    <provider-url>http://lutece.paris.fr</provider-url>
    <icon-url>images/admin/skin/plugins/shorturl/shorturl.png</icon-url>
    <copyright/>
	<core-version-dependency>
		<min-core-version>2.3.0</min-core-version>
		<max-core-version/>	
    </core-version-dependency>
    <db-pool-required>1</db-pool-required>
    
    <!-- Admin features parameters -->
    <admin-features>
    </admin-features>    

  	<!-- XPages parameters -->
    <applications>
        <application>
            <application-id>shorturl</application-id>
            <application-class>fr.paris.lutece.plugins.shorturl.web.ShortUrlApp</application-class>
        </application>
    </applications>
    
   <filters>
		<filter>
				<filter-name>
					Short Url Redirect Filter
				</filter-name>
				<filter-class>
					fr.paris.lutece.plugins.shorturl.web.ShortUrlRedirectFilter
				</filter-class>
				<url-pattern>
					/s/*
				</url-pattern>
		</filter>	
   </filters>
</plug-in>